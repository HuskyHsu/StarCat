{
    "manifest_version": 3,
    "name": "Github Stars Categorize",
    "version": "1.0",
    "description": "Automatically categorize and list your Github stars for easy browsing.",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}